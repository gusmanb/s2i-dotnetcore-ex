<div style="font-size:40px; text-align:center">Welcome to Without Parole Games Podcast server</div>
<div style="padding:20px; font-size: 20px;">Currently available channels:</div>
@{

    var settings = DBManager.GetSettings();
    
    if (settings == null)
    {
        DBManager.UpdateSettings("");
        settings = DBManager.GetSettings();
    }

    var channels = DBManager.GetChannels();

}

@foreach(var channel in channels)
    {
    <div class="podcast">
        <a href="@(settings.BasePath + "/Home/Channel/" + channel.Name)">@channel.Name</a>
        <div class="podcast-description">@channel.Description</div>
    </div>
    <hr />
}

