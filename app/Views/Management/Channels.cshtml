@{

    var channels = DBManager.GetChannels();

}

<div class="container">
    @foreach(var channel in channels)
    {
    <div class="row">
        <div class="col-sm-7">@(channel.Name + " - " + channel.CreationDate)</div>
        <div class="col-sm-1"><a href="EditChannel/@channel.Id" class="btn btn-warning" style="color:white"><span class="glyphicon glyphicon-edit"></span> Edit</a></div>
        <div class="col-sm-1"><a href="DeleteChannel/@channel.Id" class="btn btn-danger" style="color:white"><span class="glyphicon glyphicon-trash"></span> Delete</a></div>
        <div class="col-sm-1">&nbsp;</div>
        <div class="col-sm-1"><a href="PodCasts/@channel.Id" class="btn btn-success"><span class="glyphicon glyphicon-sound-dolby"></span> Podcasts</a></div>
    </div>
    <hr />
    }
</div>

<a href="EditChannel/-1" class="btn btn-success" style="color:white;"><span class="glyphicon glyphicon-plus"></span> Create channel</a>